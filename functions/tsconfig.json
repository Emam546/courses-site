{
  "compilerOptions": {
    "module": "ES2015",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@serv/*": [
        "./src/server/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../src/data.d.ts"
  ]
}